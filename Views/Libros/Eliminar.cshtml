@model BibliotecaMVC.Models.Libro

@{
    ViewData["Title"] = "Eliminar libro";
}

<h1>Eliminar libro</h1>

<h3>¿Seguro que deseas eliminar este libro?</h3>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.TituloLibro</dd>

        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Autor</dd>

        <dt class="col-sm-2">Disponible</dt>
        <dd class="col-sm-10">@Model.Disponible</dd>
    </dl>
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Inicio" class="btn btn-secondary">Cancelar</a>
</form>
