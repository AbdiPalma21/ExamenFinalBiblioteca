@model BibliotecaMVC.Models.Libro

@{
    ViewData["Title"] = "Editar libro";
}

<h1>Editar libro</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="TituloLibro" class="form-label"></label>
                <input asp-for="TituloLibro" class="form-control" />
                <span asp-validation-for="TituloLibro" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Autor" class="form-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Disponible" class="form-label"></label>
                <select asp-for="Disponible" class="form-select">
                    <option value="Sí">Sí</option>
                    <option value="No">No</option>
                </select>
                <span asp-validation-for="Disponible" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaDePublicacion" class="form-label"></label>
                <input asp-for="FechaDePublicacion" class="form-control" />
                <span asp-validation-for="FechaDePublicacion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Portada actual</label><br />
                @if (!string.IsNullOrEmpty(Model.Portada))
                {
                    <img src="@Model.Portada" alt="Portada"
                         style="max-height:120px; max-width:90px;" />
                }
            </div>

            <div class="mb-3">
                <label asp-for="ArchivoPortada" class="form-label">Nueva portada (opcional)</label>
                <input asp-for="ArchivoPortada" class="form-control" type="file" />
                <span asp-validation-for="ArchivoPortada" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="DescripcionLibro" class="form-label"></label>
                <textarea asp-for="DescripcionLibro" class="form-control" rows="4"></textarea>
                <span asp-validation-for="DescripcionLibro" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar cambios</button>
            <a asp-action="Inicio" class="btn btn-secondary">Volver al listado</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
