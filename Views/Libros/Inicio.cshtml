@model IEnumerable<BibliotecaMVC.Models.Libro>

@{
    ViewData["Title"] = "Listado de libros";
}

<h1>Libros</h1>

<form asp-action="Inicio" method="get" class="mb-3">
    <div class="input-group">
        <input type="text"
               name="criterioBusqueda"
               value="@ViewData["CriterioActual"]"
               class="form-control"
               placeholder="Buscar por título..." />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<p>
    <a asp-action="Crear" class="btn btn-success">Registrar nuevo libro</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Portada</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Disponible</th>
            <th>Fecha de publicación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var libro in Model)
{
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(libro.Portada))
                {
                    <img src="@libro.Portada" alt="Portada"
                         style="max-height:80px; max-width:60px;" />
                }
            </td>
            <td>@libro.TituloLibro</td>
            <td>@libro.Autor</td>
            <td>@libro.Disponible</td>
            <td>@libro.FechaDePublicacion.ToShortDateString()</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@libro.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@libro.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@libro.Id" class="btn btn-danger btn-sm">Eliminar</a>

                    @* Botón de disponibilidad *@
                    @{
                        var estaDisponible = libro.Disponible == "Sí";
                        var textoBoton = estaDisponible
                        ? "Marcar como no disponible"
                        : "Marcar como disponible";
                        var claseBoton = estaDisponible
                        ? "btn btn-secondary btn-sm"   // gris
                        : "btn btn-success btn-sm";    // verde
                    }

                    <form asp-action="CambiarDisponibilidad"
                          asp-route-id="@libro.Id"
                          method="post"
                          class="d-inline">
                        <button type="submit" class="@claseBoton">
                            @textoBoton
                        </button>
                    </form>
                </td>

        </tr>
}
    </tbody>
</table>
